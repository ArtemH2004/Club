@model Club.Models.CompetitionViewModel

@{
    ViewData["Title"] = "Создать Соревнование";
}

<div class="mt-4 container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name">Название</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date">Дата</label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Цена</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AudienceCount">Количество зрителей</label>
            <input asp-for="AudienceCount" class="form-control" />
            <span asp-validation-for="AudienceCount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Result">Результат</label>
            <input asp-for="Result" class="form-control" />
            <span asp-validation-for="Result" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weather">Погода</label>
            <input asp-for="Weather" class="form-control" />
            <span asp-validation-for="Weather" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FieldId">ID Поля</label>
            <input asp-for="FieldId" class="form-control" />
            <span asp-validation-for="FieldId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
