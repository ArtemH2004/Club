@model IEnumerable<Club.Models.Manager>

@{
    ViewData["Title"] = "Владельцы";
}

<div class="mt-4 container">
    <h1>@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Создать</a>
    </div>

    <table class="table-striped table-bordered table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Телефон</th>
                <th>Процент акций</th>
                <th>ID Клуба</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model)
            {
                <tr>
                    <td>@manager.ManagerId</td>
                    <td>@manager.LastName</td>
                    <td>@manager.FirstName</td>
                    <td>@manager.MiddleName</td>
                    <td>@manager.PhoneNumber</td>
                    <td>@manager.Amount</td>
                    <td>@manager.ClubsId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@manager.ManagerId" class="btn btn-warning btn-sm">Изменить</a>
                        <form asp-action="Delete" asp-route-id="@manager.ManagerId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены, что хотите удалить данного менеджера?');">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
