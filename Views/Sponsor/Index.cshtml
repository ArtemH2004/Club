@model IEnumerable<Club.Models.Sponsor>

@{
    ViewData["Title"] = "Спонсоры";
}

<div class="mt-4 container">
    <h1>@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Создать</a>
    </div>

    <table class="table-striped table-bordered table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Телефон</th>
                <th>Пол</th>
                <th>Адрес</th>
                <th>Помощь</th>
                <th>ID Клуба</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sponsor in Model)
            {
                <tr>
                    <td>@sponsor.SponsorId</td>
                    <td>@sponsor.LastName</td>
                    <td>@sponsor.FirstName</td>
                    <td>@sponsor.MiddleName</td>
                    <td>@sponsor.PhoneNumber</td>
                    <td>@sponsor.Gender</td>
                    <td>@sponsor.Address</td>
                    <td>@sponsor.Percent</td>
                    <td>@sponsor.ClubsId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@sponsor.SponsorId" class="btn btn-warning btn-sm">Изменить</a>
                        <form asp-action="Delete" asp-route-id="@sponsor.SponsorId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены, что хотите удалить данного спонсора?');">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
